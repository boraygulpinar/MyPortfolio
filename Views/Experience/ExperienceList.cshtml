@model List<Experience>

@{
    ViewData["Title"] = "ExperienceList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="main-panel">
	<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Tables</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Education</div>
						</div>
						<div class="card-body">
							<table class="table mt-3">
								<thead>
									<tr>
										<th scope="col">#</th>
										<th scope="col">Head</th>
										<th scope="col">Title</th>
										<th scope="col">Date</th>
										<th scope="col">GPA</th>
										<th scope="col">Delete</th>
										<th scope="col">Update</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
									<tr>
										<td>@item.ExperienceID</td>
										<td>@item.Head</td>
										<td>@item.Title</td>
										<td>@item.Date</td>
										<td>@item.Description</td>
											<td><a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-danger">Delete</a></td>
											<td><a href="/Experience/UpdateExperience/@item.ExperienceID" class="btn btn-success">Update</a></td>
									</tr>
									}
								</tbody>
							</table>
							<td><a href="/Experience/CreateExperience/" class="btn btn-primary">Add Education</a></td>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

